<div class="container-fluid">
<nav class="navbar-fixed-top" role="navigation" style="top:10px">
<a href="/"><img src="/images/cropped-swash.png" height="50px" width="50px"></a>
</nav>
</br>


<div class="row">
    <div class="Absolute-Center is-Responsive">
        <div id="absolute-name-container">
            <h4 class="center-text">Sign-Up</h4>
        </div>
        <% if (message) { %>
          <div><%= message %></div>
        <% } %>
      <div class="col-sm-12 col-md-10 col-md-offset-1">
         <form role="form" action="/signup" method="POST">
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-star"></i></span>
            <input type="firstname" class="form-control" placeholder="first name" name="first_name" value="<%= first_name %>" required autofocus/>
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-star"></i></span>
            <input type="lastname" class="form-control" placeholder="last name" name="last_name" value="<%= last_name %>" required/>
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <input type="Email" class="form-control" placeholder="email" name="email" value="<%= email %>" required/>
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="username" class="form-control" placeholder="username" name="username" value="<%= username %>" required/>
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" class="form-control" placeholder="password" name="password" required/>
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" class="form-control" placeholder="confirm password" name="passwordConfirm"/>
        </div>
        </div>
        <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-block">Sign-Up</button>
        </div>
        </form>
          <div class="form-group text-center">
            <p>By signing up, you agree to our <a href="/privacypolicy">Privacy Policy</a> and <a href="/tos">Terms of Service </a>
            <p>Have an account? <a href="/login">Login</a>
          </div>
        </form>        
      </div>  
    </div>    
  </div>
</div>
