<div class="container-fluid">
  <nav class="navbar-fixed-top" role="navigation" style="top:10px">
    <a href="/"><img src="/images/cropped-swash.png" height="50px" width="50px"></a>
  </nav>
  </br>

  <div class="row">
    <div class="Absolute-Center is-Responsive">
      <div id="absolute-name-container">
        <h4 class="center-text">Forgot Username</h4>
      </div>
      <% if (message) { %>
        <div class="login-center-text">
          <%= message %>
        </div>
      <% } %>

      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <form role="form" action="/username/forgot" method="POST">
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <input type="Email" class="form-control" placeholder="email" name="email" value="<%= email %>" required/>
          </div>
      </div>
      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
      </form>
      <div class="form-group text-center">
        <a href="/login">Back</a>
      </div>
      </form>
    </div>
  </div>
</div>
</div>
