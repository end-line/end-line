<div class="container-fluid">
	<nav class="navbar-fixed-top" role="navigation" style="top:10px">
		<a href="/"><img src="/images/cropped-swash.png" height="50px" width="50px"></a>
	</nav>

	<div class="row">
		<div class="Absolute-Center is-Responsive">
			<div id="absolute-name-container">
				<h4 class="center-text">Login to end/line</h4>
			</div>
			<% if (message) { %>
				<div>
					<%= message %>
				</div>
				<% } %>

					<div class="col-sm-12 col-md-10 col-md-offset-1">
						<form role="form" action="/login" method="POST">
							<div class="form-group input-group">
								<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
								<input class="form-control" type="text" name='username' placeholder="username" value="<%= username %>" required autofocus/>
							</div>
							<div class="form-group input-group">
								<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
								<input class="form-control" type="password" name='password' placeholder="password" required/>
							</div>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block">Login</button>
					</div>
					<div class="form-group text-center">
						<p><a href="#">Forgot Password</a></p>
						<p>Don't have an account? <a href="/signup">Sign-up</a>
					</div>
					</form>
					
		</div>
	</div>
</div>
</div>
