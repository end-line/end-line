<!-- Page Content --> 
<div class="container">
	<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Encode This Work
            </br>
            </h1>
        </div>
    </div>
<form role="form" action="/poem/<%= poem.id %>/encode" method="POST">
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
        <label for="originalPoem">Original Poem</label>
        <textarea class="form-control input-lg" id="originalPoem" type="text" rows="16"><%= poem.body %></textarea>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
        <label for="encodedPoem">Encoded Poem</label>
        <textarea class="form-control input-lg" id="encodedPoem" type="text" rows="16" name="encodedPoem" autofocus></textarea>
        </div>
        </div>
</div>
<div id="encodeMessage"></div>
<div class="row">
    <div class="col-lg-12 center-text">
        <button type="button" class="btn btn-lg btn-primary" id="validate">Validate XML</button>
    </div>
</div>
    <div class="col-lg-12 center-text">
        </br>
        <button type="submit" class="btn btn-lg btn-primary" id="submitValidated" disabled>Submit XML Encoding</button>
    </div>
</form>
</div>
