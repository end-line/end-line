<!-- Page Content --> 
<div class="container">
<div class="row">
        <div class="col-lg-12 text-center">
            </br>
            <a href="/search"><button type="button" class="btn btn-primary btn-lg">Search for a Poem</button></a>
        </div>

        <div class="col-lg-12 text-center">
            </br>
            <a href="/upload"><button type="button" class="btn btn-primary btn-lg">Upload a New Poem</button></a>
        </div>
	</div>

    <div class="row">

        <div class="col-md-6 center-text">
            <h2 class="center-text">My Uploads</h2>
            <hr>
            <% poems.forEach((poem) => { %>
              <a href="/poem/<%= poem.id %>"><p><%= poem.title %></p></a>
            <% }) %>
        </div>

        <div class="col-md-6 center-text">
            <h2>My Encodings</h2>
            <hr>
            <% encodings.forEach((encoding) => { %>
              <a href="/poem/<%= encoding.poem_id %>/encoding/<%= encoding.encoded_id %>"><p>[<%= moment(encoding.date_posted).format('MM/DD/YYYY') %>] <%= encoding.title %></p></a>
            <% }) %>
        </div>
	</div>


</div>
