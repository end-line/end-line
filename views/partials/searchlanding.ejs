<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form role="search" method="GET" action="/search">
				<div class="input-group input-group-lg">
					<input type="text" class="form-control" placeholder="Search" name="q" autofocus>
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
			</form>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Results
				</br>
			</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-7">
			<h4 class="tableitem">Title</h4>
		</div>
		<div class="col-xs-3">
			<h4 class="tableitem">Author</h4>
		</div>
		<div class="col-xs-2">
			<h4 class="tableitem">Date</h4>
		</div>
	</div>
	<% poems.forEach((poem) => { %>
		<div class="row">
			<div class="col-xs-7">
				<a href="/poem/<%= poem.id %>">
					<h4>
						<%= poem.title %>
					</h4>
				</a>
			</div>
			<div class="col-xs-3">
				<h5>
					<%= poem.author %>
				</h5>
			</div>
			<div class="col-xs-2">
				<h5>
					<%= moment.utc(poem.date_uploaded).utcOffset(-1*(new Date().getTimezoneOffset())).format('MM/DD/YYYY') %>
				</h5>
			</div>
		</div>
		<% }) %>

			<nav aria-label="searchnav">
				<ul class="pagination">
					<li class="page-item disabled"><span class="page-link">Previous</span></li>
					<li class="page-item active"><span class="page-link">1<span class="sr-only">(current)</span></span>
					<% for(var i=pageBottom;i<=pageTop;i++) { %>
						<li class="page-item <%= i==pageBottom ? "active" : "" %>"><a class="page-link" href="/search?q=<%= search %>&#38;page=<%= i %>"><%= i %></a></li>
					<% } %>
					<li class="page-item"><a class="page-link" href="#">Next</a></li>
				</ul>
			</nav>
</div>
